{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : app.security.isGranted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  <table class="table">
    <thead>
    <tr>
      <th>Id</th>
      <th>Роль</th>
      <th>Домен</th>
      <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    {% for role in roles %}
      <tr>
        <td>{{ role.id }}</td>
        <td>{{ role.role }}</td>
        <td>{{ role.domain }}</td>
        <td>
          <nobr>
            <form id="edit-role-btn" style="display: inline-block;" action="{{ path('db_role_edit', {id: role.id}) }}"
                  enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-edit"></span></button>
            </form>
            <form style="display: inline-block;" action="{{ path('db_role_delete', {id: role.id}) }}"
                  enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
            </form>
          </nobr>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('db_role_add') }}" id="add-role-btn" class="btn btn-primary">Добавить</a>

  <div id="modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}