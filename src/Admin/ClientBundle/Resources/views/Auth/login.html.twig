<form class="form-signin" method="post" action="/" enctype="application/x-www-form-urlencoded">
    {% if error is defined and error %}
        <div id="loginError" class="alert alert-danger _getLoginError">{% autoescape false %}{{ error|trans }}{% endautoescape %}</div>
    {% endif %}

    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" id="inputEmail" class="form-control" name="_username" placeholder="Введите Email" value="{{ last_username }}" required autofocus>
    <label for="inputPassword" class="sr-only">Пароль</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Введите пароль" name="_password" required>

    <button class="btn btn-lg btn-default btn-custom" type="submit">Войти</button>
</form>