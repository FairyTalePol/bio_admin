{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  <table class="table table-responsive table-striped table-hover">
    <thead>
    <tr>
      <th>Категория</th>
      <th>Название</th>
      <th>Описание</th>
      <th>Дейст. вещество</th>
      <th>Объем</th>
      <th>Конц. препарата</th>
      <th>Вредители</th>
      <th>Болезни</th>
      <th>Производители</th>
      <th>Видео</th>
      <th>Видео</th>
      <th>Фото</th>
      <th class="text-center"><a href="{{ path('chemistry_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a></th>
    </tr>
    </thead>
    <tbody>
    {% for chemistry in _chemistry %}
      <tr>
        <td>{{ chemistry.category.name }}</td>
        <td>{{ chemistry.name }}</td>
        <td>{{ chemistry.description }}</td>
        <td>{{ chemistry.substance }}</td>
        <td>{{ chemistry.volume }}</td>
        <td>{{ chemistry.norm }}</td>
        <td>
          {% for vermin in chemistry.vermins %}
            {{ vermin.name ~ ';' }} {% if chemistry.vermins|length > 1 %}<br>{% endif %}
          {% endfor %}
        </td>
        <td>
          {% for blight in chemistry.blights %}
            {{ blight.name ~ ';' }} {% if chemistry.blights|length > 1 %}<br>{% endif %}
          {% endfor %}
        </td>
        <td>
          {% for manufacturer in chemistry.manufacturers %}
            {{ manufacturer.name }} {% if chemistry.manufacturers|length > 1 %}<br>{% endif %}
          {% endfor %}
        </td>
        <td>{{ chemistry.video }}</td>
        <td>{% if chemistry.image %}
            <a href="/compiled/bundles/admincatalog/images/chemistry/original/{{ chemistry.image }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/chemistry/logo/{{ chemistry.image }}" alt="Фото">
            </a>
          {% endif %}
          {% if chemistry.image2 %}
            <a href="/compiled/bundles/admincatalog/images/chemistry/original/{{ chemistry.image2 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/chemistry/logo/{{ chemistry.image2 }}" alt="Фото">
            </a>
          {% endif %}
          {% if chemistry.image3 %}
            <a href="/compiled/bundles/admincatalog/images/chemistry/original/{{ chemistry.image3 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/chemistry/logo/{{ chemistry.image3 }}" alt="Фото">
            </a>
          {% endif %}
          {% if chemistry.image4 %}
            <a href="/compiled/bundles/admincatalog/images/chemistry/original/{{ chemistry.image3 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/chemistry/logo/{{ chemistry.image3 }}" alt="Фото">
            </a>
          {% endif %}
        </td>
        <td class="text-center">
          <nobr>
            <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('chemistry_edit', {id: chemistry.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
            </form>&nbsp;
            <form style="display: inline-block;" action="{{ path('chemistry_delete', {id: chemistry.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
            </form>
          </nobr>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <div id="modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}