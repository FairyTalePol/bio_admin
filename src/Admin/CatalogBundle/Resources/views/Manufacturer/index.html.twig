{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  {% set manufacturer_type = {
  'chemistry': 'Химия',
  'cultures': 'Культуры',
  'substrates': 'Субстраты',
  'entomophages': 'Энтомофаги'
  } %}

  <table class="table table-responsive table-striped table-hover">
    <thead>
    <tr>
      <th>Название</th>
      <th>Тип производителя</th>
      <th>Видео</th>
      <th>Фото</th>
      <th class="text-center">
        <a href="{{ path('manufacturer_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a></th>
    </tr>
    </thead>
    <tbody>
    {% for manufacturer in manufacturers %}
      <tr>
        <td>{{ manufacturer.name }}</td>
        <td>{{ manufacturer_type[manufacturer.manufacturerType] }}</td>
        <td>{{ manufacturer.video }}</td>
        <td>{% if manufacturer.image %}
            <a href="/compiled/bundles/admincatalog/images/manufacturers/original/{{ manufacturer.image }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/manufacturers/logo/{{ manufacturer.image }}" alt="Фото">
            </a>
          {% endif %}
          {% if manufacturer.image2 %}
            <a href="/compiled/bundles/admincatalog/images/manufacturers/original/{{ manufacturer.image2 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/manufacturers/logo/{{ manufacturer.image2 }}" alt="Фото">
            </a>
          {% endif %}
          {% if manufacturer.image3 %}
            <a href="/compiled/bundles/admincatalog/images/manufacturers/original/{{ manufacturer.image3 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/manufacturers/logo/{{ manufacturer.image3 }}" alt="Фото">
            </a>
          {% endif %}
          {% if manufacturer.image4 %}
            <a href="/compiled/bundles/admincatalog/images/manufacturers/original/{{ manufacturer.image4 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/manufacturers/logo/{{ manufacturer.image4 }}" alt="Фото">
            </a>
          {% endif %}
        </td>
        <td class="text-center">
          <nobr>
            <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('manufacturer_edit', {id: manufacturer.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
            </form>
            &nbsp;
            <form style="display: inline-block;" action="{{ path('manufacturer_delete', {id: manufacturer.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span>
              </button>
            </form>
          </nobr>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <div id="modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}