{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  <div class="text-right">
    <a href="{{ path('vermin_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a>
  </div>

  {% for vermin in vermins %}
  <div class="content-element">
    <div class="ref-content-name">
      <div class="name-ru">
        <strong>{{ vermin.category.name }}</strong>: {{ vermin.name }}
        <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('vermin_edit', {id: vermin.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
          <span class="glyphicon glyphicon-edit text-info"></span>
        </form>&nbsp;
        <form style="display: inline-block;" action="{{ path('vermin_delete', {id: vermin.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
          <span class="glyphicon glyphicon-remove text-danger"></span>
        </form>
      </div>
    </div>
    <div class="img-content">
      {% if vermin.image %}
        <a href="/compiled/bundles/admincatalog/images/vermin/original/{{ vermin.image }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/vermin/logo/{{ vermin.image }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo_small.png" alt="Фото" class="ref-content-img">
      {% endif %}
      {% if vermin.image2 %}
        <a href="/compiled/bundles/admincatalog/images/vermin/original/{{ vermin.image2 }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/vermin/logo/{{ vermin.image2 }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo_small.png" alt="Фото" class="ref-content-img">
      {% endif %}
      {% if vermin.image3 %}
        <a href="/compiled/bundles/admincatalog/images/vermin/original/{{ vermin.image3 }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/vermin/logo/{{ vermin.image3 }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo_small.png" alt="Фото" class="ref-content-img">
      {% endif %}
      {% if vermin.image4 %}
        <a href="/compiled/bundles/admincatalog/images/vermin/original/{{ vermin.image4 }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/vermin/logo/{{ vermin.image4 }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo_small.png" alt="Фото" class="ref-content-img">
      {% endif %}
    </div>
    <div class="ref-content-descr">{{ vermin.description }}</div>

    <div class="clear"></div>

    <div class="vermin-labels">
      <div class="vermin-labels-name"><strong>{{ 'Пороги вредоносности' }}</strong></div>
      <div>
        <div class="vermin-lights">
          <div class="light"><span class="blue-light"></span></div>
          <div class="vermin-lights-descr">{% if vermin.disDescription1 %}{{ vermin.disDescription1 }}{% else %}{{ 'Данных нет' }}{% endif %}</div>
        </div>
        <div class="vermin-lights">
          <div class="light"><span class="green-light"></span></div>
          <div class="vermin-lights-descr">{% if vermin.disDescription2 %}{{ vermin.disDescription2 }}{% else %}{{ 'Данных нет' }}{% endif %}</div>
        </div>
        <div class="vermin-lights">
          <div class="light"><span class="yellow-light"></span></div>
          <div class="vermin-lights-descr">{% if vermin.disDescription3 %}{{ vermin.disDescription3 }}{% else %}{{ 'Данных нет' }}{% endif %}</div>
        </div>
        <div class="vermin-lights">
          <div class="light"><span class="orange-light"></span></div>
          <div class="vermin-lights-descr">{% if vermin.disDescription4 %}{{ vermin.disDescription4 }}{% else %}{{ 'Данных нет' }}{% endif %}</div>
        </div>
        <div class="vermin-lights">
          <div class="light"><span class="red-light"></span></div>
          <div class="vermin-lights-descr">{% if vermin.disDescription5 %}{{ vermin.disDescription5 }}{% else %}{{ 'Данных нет' }}{% endif %}</div>
        </div>
      </div>
    </div>

    <div class="clear"></div>

    <div class="vermin-labels">
      <div class="vermin-labels-name"><strong>{{ 'Видео' }}</strong></div>
      <div>
        {% if vermin.video %}
        <a href="{{ 'https://www.youtube.com/embed/' ~ vermin.video }}" target="_blank">
          {{ 'https://www.youtube.com/embed/' ~ vermin.video }}
        </a>
        {% else %}
            {{ 'Ссылка не указана' }}
        {% endif %}
      </div>
    </div>

    <div class="end-border"></div>
  </div>
  {% endfor %}


  <div id="modal" class="modal fade">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}