{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  <table class="table table-responsive table-striped table-hover">
    <thead>
    <tr>
      <th>Категория</th>
      <th>Название</th>
      <th>Описание</th>
      <th>Порог вред. 1</th>
      <th>Порог вред. 2</th>
      <th>Порог вред. 3</th>
      <th>Порог вред. 4</th>
      <th>Порог вред. 5</th>
      <th>Фото</th>
      <th class="text-center"><a href="{{ path('vermin_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a></th>
    </tr>
    </thead>
    <tbody>
    {% for vermin in vermins %}
      <tr>
        <td>{{ vermin.category.name }}</td>
        <td>{{ vermin.name }}</td>
        <td>{{ vermin.description }}</td>
        <td>{{ vermin.disDescription1 }}</td>
        <td>{{ vermin.disDescription2 }}</td>
        <td>{{ vermin.disDescription3 }}</td>
        <td>{{ vermin.disDescription4 }}</td>
        <td>{{ vermin.disDescription5 }}</td>
        <td>{% if vermin.image %}
            <a href="/compiled/bundles/admincatalog/images/vermin/original/{{ vermin.image }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/vermin/logo/{{ vermin.image }}" alt="Фото">
            </a>
          {% endif %}
        </td>
        <td class="text-center">
          <nobr>
            <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('vermin_edit', {id: vermin.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
            </form>&nbsp;
            <form style="display: inline-block;" action="{{ path('vermin_delete', {id: vermin.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
            </form>
          </nobr>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <div id="modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}