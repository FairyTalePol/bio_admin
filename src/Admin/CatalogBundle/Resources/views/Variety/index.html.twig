{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  <table class="table table-responsive table-striped table-hover">
    <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Урожайность</th>
      <th>Форма</th>
      <th>Цвет</th>
      <th>Производитель</th>
      <th>Фото</th>
      <th class="text-center"><a href="{{ path('variety_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a></th>
    </tr>
    </thead>
    <tbody>
    {% for variety in varieties %}
      <tr>
        <td>{{ variety.name }}</td>
        <td>{{ variety.description }}</td>
        <td>{{ variety.yield }}</td>
        <td>{{ variety.form }}</td>
        <td>{{ variety.color }}</td>
        <td>{{ variety.cultureManufacturer.manufacturer.name }}</td>
        <td>{{ variety.image }}</td>
        <td class="text-center">
          <nobr>
            <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('variety_edit', {id: variety.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
            </form>&nbsp;
            <form style="display: inline-block;" action="{{ path('variety_delete', {id: variety.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
            </form>
          </nobr>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <div id="modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}