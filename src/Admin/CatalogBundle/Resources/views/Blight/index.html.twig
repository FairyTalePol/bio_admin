{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  <table class="table table-responsive table-striped table-hover">
    <thead>
    <tr>
      <th>Категория</th>
      <th>Название</th>
      <th>Описание</th>
      <th>Порог вред. 1</th>
      <th>Порог вред. 2</th>
      <th>Порог вред. 3</th>
      <th>Порог вред. 4</th>
      <th>Порог вред. 5</th>
      <th>Видео</th>
      <th>Фото</th>
      <th class="text-center"><a href="{{ path('blight_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a></th>
    </tr>
    </thead>
    <tbody>
    {% for blight in blights %}
      <tr>
        <td>{{ blight.category.name }}</td>
        <td>{{ blight.name }}</td>
        <td>{{ blight.description }}</td>
        <td>{{ blight.disDescription1 }}</td>
        <td>{{ blight.disDescription2 }}</td>
        <td>{{ blight.disDescription3 }}</td>
        <td>{{ blight.disDescription4 }}</td>
        <td>{{ blight.disDescription5 }}</td>
        <td>{{ blight.video }}</td>
        <td>{% if blight.image %}
            <a href="/compiled/bundles/admincatalog/images/blight/original/{{ blight.image }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/blight/logo/{{ blight.image }}" alt="Фото">
            </a>
          {% endif %}
          {% if blight.image2 %}
            <a href="/compiled/bundles/admincatalog/images/blight/original/{{ blight.image2 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/blight/logo/{{ blight.image2 }}" alt="Фото">
            </a>
          {% endif %}
          {% if blight.image3 %}
            <a href="/compiled/bundles/admincatalog/images/blight/original/{{ blight.image3 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/blight/logo/{{ blight.image3 }}" alt="Фото">
            </a>
          {% endif %}
          {% if blight.image4 %}
            <a href="/compiled/bundles/admincatalog/images/blight/original/{{ blight.image4 }}" target="_blank">
              <img src="/compiled/bundles/admincatalog/images/blight/logo/{{ blight.image4 }}" alt="Фото">
            </a>
          {% endif %}
        </td>
        <td class="text-center">
          <nobr>
            <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('blight_edit', {id: blight.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-edit"></span></button>
            </form>&nbsp;
            <form style="display: inline-block;" action="{{ path('blight_delete', {id: blight.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
              <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span></button>
            </form>
          </nobr>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <div id="modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}