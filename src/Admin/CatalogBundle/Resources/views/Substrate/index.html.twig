{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}

  {% set substrate_type = {
  'SUBSTRATE_TYPE_BLOCK': 'Блок',
  'SUBSTRATE_TYPE_DISK': 'Диск',
  'SUBSTRATE_TYPE_CUBE': 'Куб',
  'SUBSTRATE_TYPE_MAT': 'Мат'
  } %}

  <div class="text-right">
    <a href="{{ path('substrate_add') }}" id="add-vermin-btn" class="btn btn-primary btn-sm">Добавить</a>
  </div>

  {% for substrate in substrates %}
  <div class="content-element">
    <div class="ref-content-name">
      <div class="name-ru">
        {{ substrate.name }}
        <form id="edit-vermin-btn" style="display: inline-block;" action="{{ path('substrate_edit', {id: substrate.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
          <span class="glyphicon glyphicon-edit text-info"></span>
        </form>&nbsp;
        <form style="display: inline-block;" action="{{ path('substrate_delete', {id: substrate.id}) }}" enctype="application/x-www-form-urlencoded" method="get">
          <span class="glyphicon glyphicon-remove text-danger"></span>
        </form>
      </div>
    </div>
    <div class="img-content">
      {% if substrate.image %}
        <a href="/compiled/bundles/admincatalog/images/substrates/original/{{ substrate.image }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/substrates/logo/{{ substrate.image }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo.png" alt="Фото" class="ref-content-img">
      {% endif %}
      {% if substrate.image2 %}
        <a href="/compiled/bundles/admincatalog/images/substrates/original/{{ substrate.image2 }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/substrates/logo/{{ substrate.image2 }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo.png" alt="Фото" class="ref-content-img">
      {% endif %}
      {% if substrate.image3 %}
        <a href="/compiled/bundles/admincatalog/images/substrates/original/{{ substrate.image3 }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/substrates/logo/{{ substrate.image3 }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo.png" alt="Фото" class="ref-content-img">
      {% endif %}
      {% if substrate.image4 %}
        <a href="/compiled/bundles/admincatalog/images/substrates/original/{{ substrate.image4 }}" target="_blank">
          <img src="/compiled/bundles/admincatalog/images/substrates/logo/{{ substrate.image4 }}" alt="Фото" class="ref-content-img">
        </a>
      {% else %}
        <img src="/compiled/bundles/adminclient/images/no_photo.png" alt="Фото" class="ref-content-img">
      {% endif %}
    </div>
    <div class="ref-content-descr"><strong>{{ 'Размер –'|capitalize }}</strong> {{ substrate.size }}</div>
    <div class="ref-content-descr"><strong>{{ 'Тип –'|capitalize }}</strong> {{ substrate_type[substrate.substrateType] }}</div>
    <div class="ref-content-descr">{{ substrate.description }}</div>
    <div class="clear"></div>

    <div class="vermin-labels">
      <div class="vermin-labels-name"><strong>{{ 'Видео' }}</strong></div>
      <div>
        {% if substrate.video %}
          <a href="{{ 'https://www.youtube.com/embed/' ~ substrate.video }}" target="_blank">
            {{ 'https://www.youtube.com/embed/' ~ substrate.video }}
          </a>
        {% else %}
          {{ 'Ссылка не указана' }}{% endif %}</div>
    </div>

    <div class="end-border"></div>
  </div>
  {% endfor %}



  <div id="modal" class="modal fade">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body&hellip;</p>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div><!-- /.modal -->

{% endblock %}