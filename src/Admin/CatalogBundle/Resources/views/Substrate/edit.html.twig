{% extends app.request.isXmlHttpRequest ? 'AdminClientBundle::ajax.html.twig' : is_granted('IS_AUTHENTICATED_FULLY') ? 'AdminClientBundle::layout.html.twig' : 'AdminClientBundle::default.html.twig' %}

{% block body %}
  {% if form.vars.errors|length == 0 and app.request.method == 'POST' %}
    <script type="text/javascript">
      document.location.reload();
    </script>
  {% else %}
    {% if form.vars.value.id is not null %}
      <form id="edit-client-form" action="{{ path('substrate_update', { id: form.vars.value.id }) }}" method="post" enctype="application/x-www-form-urlencoded"
    {% else %}
      <form id="edit-client-form" action="{{ path('substrate_update') }}" method="post" enctype="application/x-www-form-urlencoded"
    {% endif %}
    class="form-horizontal">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Производ.</label>

      <div class="col-sm-10">
        {{ form_widget(form.substrate_category_manufacturer) }}
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Название</label>

      <div class="col-sm-5">
        {{ form_widget(form.name) }}
      </div>
      <div class="col-sm-5">
        {{ form_widget(form.name_en) }}
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Описание</label>

      <div class="col-sm-5">
        {{ form_widget(form.description) }}
      </div>
      <div class="col-sm-5">
        {{ form_widget(form.description_en) }}
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Размер</label>

      <div class="col-sm-10">
        {{ form_widget(form.size) }}
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Тип</label>

      <div class="col-sm-10">
        {{ form_widget(form.substrate_type) }}
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Видео</label>

      <div class="col-sm-10">
        {{ form_widget(form.video) }}
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Фото</label>

      <div class="col-sm-4">
        {{ form_widget(form.attachment) }}
        <div class="hide">{{ form_widget(form.attachment_data) }}</div>
      </div>
      <div class="col-sm-4">
        {{ form_widget(form.attachment2) }}
        <div class="hide">{{ form_widget(form.attachment_data2) }}</div>
      </div>
      <div class="col-sm-4">
        {{ form_widget(form.attachment3) }}
        <div class="hide">{{ form_widget(form.attachment_data3) }}</div>
      </div>
      <div class="col-sm-4">
        {{ form_widget(form.attachment4) }}
        <div class="hide">{{ form_widget(form.attachment_data4) }}</div>
      </div>
    </div>




    {{ form_rest(form) }}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        {% if form.vars.value.id is null %}
          <button type="submit" class="btn btn-default">Добавить</button>
        {% else %}
          <button type="submit" class="btn btn-default">Сохранить</button>
        {% endif %}
      </div>
    </div>
    </form>
    {% if form.vars.errors|length %}
      <div class="alert alert-danger">
        {{ form_errors(form) }}
      </div>
    {% endif %}
  {% endif %}
{% endblock %}
